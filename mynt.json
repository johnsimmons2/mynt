{
    "packName": "apricot-dp",
    "packDesc": "Apricot: Data-Pack demo",
    "variables": [
        {
            "name": "currency",
            "type": "score"
        },
        {
            "name" :"GruntZombie",
            "type": "zombie"
        },
        {
            "name": "magicitem",
            "type": "item"
        }
    ],

    "timers": [
        {
            "name": "test-timer2",
            "duration": 1,
            "call": [
                    "$say $blue $bold @a Summoning stick used...",
                    "$summon creeper",
                    "$summon #GruntZombie at @a"
                ]
        }
    ],

    "functions": {
        "main": [],

        "load": [
            "$say $bold $blue @a Version 1.0.0"
        ],

        "magicItemTestThing": {
            "body": [
                "$tag minecraft:arrow magicarrow ..0.8",
                "$iftag magicarrow.!{inGround:1b} $particle flame",
                "$iftag magicarrow.{inGround:1b} $summon tnt",
                "$iftag magicarrow.{inGround:1b} kill @e[tag=magicarrow]"
           ],
            "conditions": [
                {
                    "event": "$selected #magicitem"
                }
            ]
        },

        "sleepshout": {
            "body": [
                "$say @a somebody slept!"
            ],

            "conditions": [
                {
                    "event": "$sleep"
                }
            ]
        }
    }
}